@model Appointments_management_system.Models.ClinicAddressViewModel
@{
    ViewBag.Title = "Edit Clinic";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm(actionName: "Edit", controllerName: "Clinic", method: FormMethod.Post))
{
    @Html.HttpMethodOverride(HttpVerbs.Put)
    if (ViewBag.id != null)
    {
        @Html.Hidden("id", (int)ViewBag.id)
    }

    <br />
    <br />

    @Html.Label("Name", "Name: ")
    <br />
    @Html.EditorFor(c => c.Name, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(c => c.Name, "", new { @class = "text-danger" })
    <br />

    @Html.Label("Phone", "Phone Number: ")
    <br />
    @Html.EditorFor(c => c.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(c => c.PhoneNumber, "", new { @class = "text-danger" })
    <br />

    @Html.Label("Street", "Street: ")
    <br />
    @Html.EditorFor(c => c.Street, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(c => c.Street, "", new { @class = "text-danger" })
    <br />

    @Html.Label("No", "No: ")
    <br />
    @Html.EditorFor(c => c.No, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(c => c.No, "", new { @class = "text-danger" })
    <br />

    @Html.Label("City", "City: ")
    <br />
    @Html.EditorFor(c => c.City, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(c => c.City, "", new { @class = "text-danger" })
    <br />

    @Html.LabelFor(b => b.SpecialityList, "Choose specialities:")
    <br />
    for (int i = 0; i < Model.SpecialityList.Count(); i++)
    {
        @Html.HiddenFor(b => b.SpecialityList[i].Id)
        @Html.HiddenFor(b => b.SpecialityList[i].Name)
        @Html.CheckBoxFor(b => b.SpecialityList[i].IsChecked)
        @Html.DisplayFor(b => b.SpecialityList[i].Name)
        <br />
    }
    <br />

    <button class="btn btn-info" type="submit">
        Update
    </button>
}
